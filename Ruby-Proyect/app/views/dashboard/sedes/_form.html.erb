<script>
let map;
let geocoder;
let debounceTimer;

function initMap() {
  // Obtener valores iniciales del formulario o usar Barranquilla como default
  const latInput = document.getElementById('sede_latitud');
  const lngInput = document.getElementById('sede_longitud');
  
  const initialLat = latInput.value ? parseFloat(latInput.value) : 10.9685;
  const initialLng = lngInput.value ? parseFloat(lngInput.value) : -74.7813;
  
  const initialLocation = { lat: initialLat, lng: initialLng };
  
  // Crear el mapa
  map = new google.maps.Map(document.getElementById("map"), {
    zoom: 15,
    center: initialLocation,
    mapTypeControl: true,
    streetViewControl: true,
    fullscreenControl: true,
    zoomControl: true,
  });
  
  // Inicializar geocoder
  geocoder = new google.maps.Geocoder();
  
  // Actualizar coordenadas cuando el mapa se mueve
  map.addListener('center_changed', function() {
    const center = map.getCenter();
    latInput.value = center.lat().toFixed(6);
    lngInput.value = center.lng().toFixed(6);
  });
  
  // Geocodificaci√≥n inversa cuando el mapa deja de moverse
  map.addListener('idle', function() {
    const center = map.getCenter();
    geocodeLatLng(center.lat(), center.lng());
  });
  
  // Escuchar cambios en los campos del formulario
  const addressFields = ['sede_direccion', 'sede_municipio', 'sede_departamento', 'sede_barrio'];
  addressFields.forEach(fieldId => {
    const field = document.getElementById(fieldId);
    if (field) {
      field.addEventListener('input', function() {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(() => {
          geocodeAddress();
        }, 1000); // Esperar 1 segundo despu√©s de que el usuario deje de escribir
      });
    }
  });
}

// Geocodificar direcci√≥n a coordenadas (Formulario -> Mapa)
function geocodeAddress() {
  const direccion = document.getElementById('sede_direccion').value;
  const municipio = document.getElementById('sede_municipio').value;
  const departamento = document.getElementById('sede_departamento').value;
  const barrio = document.getElementById('sede_barrio').value;
  
  if (!direccion || !municipio) return;
  
  // Construir direcci√≥n completa
  let fullAddress = direccion;
  if (barrio) fullAddress += ', ' + barrio;
  fullAddress += ', ' + municipio + ', ' + departamento + ', Colombia';
  
  geocoder.geocode({ address: fullAddress }, function(results, status) {
    if (status === 'OK' && results[0]) {
      const location = results[0].geometry.location;
      map.setCenter(location);
      map.setZoom(17);
      
      // Los listeners del mapa actualizar√°n autom√°ticamente los campos de lat/lng
      console.log('üìç Direcci√≥n geocodificada:', fullAddress);
    } else {
      console.log('‚ùå Geocodificaci√≥n fallida:', status);
    }
  });
}

// Geocodificaci√≥n inversa: coordenadas a direcci√≥n (Mapa -> Formulario)
function geocodeLatLng(lat, lng) {
  const latlng = { lat: lat, lng: lng };
  
  geocoder.geocode({ location: latlng }, function(results, status) {
    if (status === 'OK' && results[0]) {
      console.log('üîç Resultados de geocodificaci√≥n:', results);
      
      const addressComponents = results[0].address_components;
      
      // Extraer componentes de la direcci√≥n
      let calle = '';
      let numero = '';
      let barrio = '';
      let municipio = '';
      let departamento = '';
      
      addressComponents.forEach(component => {
        const types = component.types;
        
        if (types.includes('street_number')) {
          numero = component.long_name;
        }
        if (types.includes('route')) {
          calle = component.long_name;
        }
        if (types.includes('sublocality_level_1') || types.includes('sublocality')) {
          barrio = component.long_name;
        }
        if (types.includes('neighborhood') && !barrio) {
          barrio = component.long_name;
        }
        if (types.includes('locality')) {
          municipio = component.long_name;
        }
        if (types.includes('administrative_area_level_1')) {
          departamento = component.long_name;
        }
      });
      
      // Construir direcci√≥n completa
      let direccionCompleta = '';
      if (calle) {
        direccionCompleta = calle;
        if (numero) {
          direccionCompleta = calle + ' ' + numero;
        }
      }
      
      // Actualizar formulario (ahora S√ç actualiza aunque tengan contenido)
      const direccionField = document.getElementById('sede_direccion');
      const barrioField = document.getElementById('sede_barrio');
      const municipioField = document.getElementById('sede_municipio');
      const departamentoField = document.getElementById('sede_departamento');
      
      if (direccionCompleta) {
        direccionField.value = direccionCompleta;
      }
      if (barrio) {
        barrioField.value = barrio;
      }
      if (municipio) {
        municipioField.value = municipio;
      }
      if (departamento) {
        departamentoField.value = departamento;
      }
      
      console.log('‚úÖ Formulario actualizado:', {
        direccion: direccionCompleta,
        barrio: barrio,
        municipio: municipio,
        departamento: departamento
      });
    } else {
      console.log('‚ùå Geocodificaci√≥n inversa fall√≥:', status);
    }
  });
}
</script>
<script>
// Restringir el campo telefono a s√≥lo d√≠gitos y 10 caracteres
document.addEventListener('turbo:load', function() {
  var tel = document.getElementById('sede_telefono');
  if (!tel) return;

  tel.addEventListener('input', function(e) {
    // eliminar todo lo que no sea d√≠gito
    var cleaned = this.value.replace(/\D/g, '');
    // limitar a 10 d√≠gitos
    if (cleaned.length > 10) cleaned = cleaned.slice(0, 10);
    if (this.value !== cleaned) this.value = cleaned;
  });
});
</script>
