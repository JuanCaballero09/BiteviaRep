<div class="form-container">
  <%= form_with model: [:dashboard, sede], local: true, html: { class: "sede-form" } do |f| %>
    <% if sede.errors.any? %>
      <div class="error-messages">
        <h3>‚ùå <%= pluralize(sede.errors.count, "error") %> impidieron guardar esta sede:</h3>
        <ul>
          <% sede.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-grid">
      <div class="form-group">
        <%= f.label :nombre, "Nombre de la Sede *" %>
        <%= f.text_field :nombre, class: "form-control", placeholder: "Ej: Sede Principal", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :telefono, "Tel√©fono" %>
        <%= f.text_field :telefono, class: "form-control", placeholder: "Ej: +57 300 123 4567" %>
      </div>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <%= f.label :departamento, "Departamento *" %>
        <%= f.text_field :departamento, class: "form-control", placeholder: "Ej: Atl√°ntico", required: true, list: "departamentos-list" %>
        <datalist id="departamentos-list">
          <option value="Atl√°ntico">
          <option value="Bol√≠var">
          <option value="Magdalena">
          <option value="Cesar">
          <option value="La Guajira">
          <option value="Antioquia">
          <option value="Cundinamarca">
          <option value="Valle del Cauca">
        </datalist>
      </div>

      <div class="form-group">
        <%= f.label :ciudad, "Ciudad *" %>
        <%= f.text_field :ciudad, class: "form-control", placeholder: "Ej: Barranquilla", required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :barrio, "Barrio" %>
      <%= f.text_field :barrio, class: "form-control", placeholder: "Ej: Ciudadela Metropolitana" %>
    </div>

    <div class="form-group">
      <%= f.label :direccion, "Direcci√≥n Completa *" %>
      <%= f.text_area :direccion, class: "form-control", rows: 2, placeholder: "Ej: Calle 55B #7A-28", required: true %>
      <small class="form-hint">Esta direcci√≥n se usar√° para geocodificar autom√°ticamente con Google Maps</small>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <%= f.label :latitud, "Latitud" %>
        <%= f.number_field :latitud, step: 0.000001, class: "form-control", placeholder: "Se calcular√° autom√°ticamente" %>
        <small class="form-hint">Opcional: se calcula autom√°ticamente</small>
      </div>

      <div class="form-group">
        <%= f.label :longitud, "Longitud" %>
        <%= f.number_field :longitud, step: 0.000001, class: "form-control", placeholder: "Se calcular√° autom√°ticamente" %>
        <small class="form-hint">Opcional: se calcula autom√°ticamente</small>
      </div>
    </div>

    <div class="form-group">
      <label class="checkbox-label">
        <%= f.check_box :activo %>
        <%= f.label :activo, "Sede Activa" %>
      </label>
    </div>

    <div class="form-actions">
      <%= f.submit "Guardar Sede", class: "btn-submit" %>
      <%= link_to "Cancelar", dashboard_sedes_path, class: "btn-cancel" %>
    </div>
  <% end %>

  <% if sede.persisted? && sede.latitud.present? && sede.longitud.present? %>
    <div class="map-preview">
      <h3>üìç Ubicaci√≥n en el Mapa</h3>
      <div id="map" style="height: 400px; border-radius: 8px; margin-top: 10px;"></div>
    </div>
  <% end %>
</div>

<style>
.form-container {
  max-width: 900px;
  margin: 0 auto;
  background: white;
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.sede-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.error-messages {
  background: #fee;
  border: 1px solid #fcc;
  border-radius: 8px;
  padding: 15px;
  color: #c00;
}

.error-messages h3 {
  margin-top: 0;
  font-size: 1rem;
}

.error-messages ul {
  margin: 10px 0 0 20px;
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  font-weight: 600;
  color: #333;
  font-size: 0.95rem;
}

.form-control {
  padding: 12px;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.3s;
}

.form-control:focus {
  outline: none;
  border-color: #ED5821;
  box-shadow: 0 0 0 3px rgba(237, 88, 33, 0.1);
}

.form-hint {
  color: #666;
  font-size: 0.85rem;
  font-style: italic;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
  width: 20px;
  height: 20px;
  cursor: pointer;
}

.form-actions {
  display: flex;
  gap: 15px;
  margin-top: 10px;
}

.btn-submit {
  flex: 1;
  padding: 14px;
  background: #ED5821;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
}

.btn-submit:hover {
  background: #d14a1a;
}

.btn-cancel {
  flex: 1;
  padding: 14px;
  background: #6c757d;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  cursor: pointer;
  transition: background 0.3s;
}

.btn-cancel:hover {
  background: #5a6268;
}

.map-preview {
  margin-top: 30px;
  padding-top: 30px;
  border-top: 2px solid #f0f0f0;
}

.map-preview h3 {
  margin-bottom: 15px;
  color: #333;
}

@media (max-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<% if sede.persisted? && sede.latitud.present? && sede.longitud.present? %>
  <script>
    function initMap() {
      const location = { lat: <%= sede.latitud %>, lng: <%= sede.longitud %> };
      const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 15,
        center: location,
      });
      const marker = new google.maps.Marker({
        position: location,
        map: map,
        title: "<%= sede.nombre %>"
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_map[:key] %>&callback=initMap" async defer></script>
<% end %>
