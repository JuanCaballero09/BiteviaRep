    <% end %>

    <div class="form-grid">
      <div class="form-group">
        <%= f.label :nombre, "Nombre de la Sede *" %>
        <%= f.text_field :nombre, class: "form-control", placeholder: "Ej: Sede Principal", required: true, id: "sede_nombre" %>
      </div>

      <div class="form-group">
        <%= f.label :telefono, "Tel√©fono" %>
        <%= f.text_field :telefono, type: "tel", class: "form-control", placeholder: "Ej: 3001234567 (10 d√≠gitos)", id: "sede_telefono", inputmode: "numeric", pattern: "\\d{10}", minlength: 10, maxlength: 10, title: "Ingrese exactamente 10 d√≠gitos num√©ricos" %>
      </div>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <%= f.label :departamento, "Departamento *" %>
        <%= f.text_field :departamento, class: "form-control", placeholder: "Ej: Atl√°ntico", required: true, list: "departamentos-list", id: "sede_departamento" %>
        <datalist id="departamentos-list">
          <option value="Atl√°ntico">
          <option value="Bol√≠var">
          <option value="Magdalena">
          <option value="Cesar">
          <option value="La Guajira">
          <option value="Antioquia">
          <option value="Cundinamarca">
          <option value="Valle del Cauca">
        </datalist>
      </div>

      <div class="form-group">
        <%= f.label :municipio, "Municipio *" %>
        <%= f.text_field :municipio, class: "form-control", placeholder: "Ej: Barranquilla", required: true, id: "sede_municipio" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :barrio, "Barrio" %>
      <%= f.text_field :barrio, class: "form-control", placeholder: "Ej: Ciudadela Metropolitana", id: "sede_barrio" %>
    </div>

    <div class="form-group">
      <%= f.label :direccion, "Direcci√≥n Completa *" %>
      <%= f.text_area :direccion, class: "form-control", rows: 2, placeholder: "Ej: Calle 55B #7A-28", required: true, id: "sede_direccion" %>
      <small class="form-hint">Esta direcci√≥n se usar√° para geocodificar autom√°ticamente con Google Maps</small>
    </div>

    <div class="form-grid">
      <div class="form-group">
        <%= f.label :latitud, "Latitud" %>
        <%= f.number_field :latitud, step: 0.000001, class: "form-control", placeholder: "Se calcular√° autom√°ticamente", readonly: true, id: "sede_latitud" %>
        <small class="form-hint">Se actualiza autom√°ticamente al mover el mapa</small>
      </div>

      <div class="form-group">
        <%= f.label :longitud, "Longitud" %>
        <%= f.number_field :longitud, step: 0.000001, class: "form-control", placeholder: "Se calcular√° autom√°ticamente", readonly: true, id: "sede_longitud" %>
        <small class="form-hint">Se actualiza autom√°ticamente al mover el mapa</small>
      </div>
    </div>

    <div class="form-group">
      <label class="checkbox-label">
        <%= f.check_box :activo %>
        <%= f.label :activo, "Sede Activa" %>
      </label>
    </div>

    <div class="form-actions">
      <%= f.submit "Guardar Sede", class: "btn-submit" %>
      <%= link_to "Cancelar", dashboard_sedes_path, class: "btn-cancel" %>
    </div>
  <% end %>
</div>

