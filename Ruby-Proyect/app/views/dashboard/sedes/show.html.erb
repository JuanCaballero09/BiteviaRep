<% if @sede.latitud.present? && @sede.longitud.present? %>
  <script>
    function initMap() {
      const location = { lat: <%= @sede.latitud %>, lng: <%= @sede.longitud %> };
      const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 16,
        center: location,
        mapTypeControl: true,
        streetViewControl: true,
        fullscreenControl: true,
      });
      
      const marker = new google.maps.Marker({
        position: location,
        map: map,
        title: "<%= @sede.nombre %>",
        animation: google.maps.Animation.DROP
      });

      const infoWindow = new google.maps.InfoWindow({
        content: `
          <div style="padding: 10px;">
            <h3 style="margin: 0 0 10px 0; color: #ED5821;"><%= @sede.nombre %></h3>
            <p style="margin: 5px 0;"><strong>üìç</strong> <%= @sede.direccion_completa %></p>
            <% if @sede.telefono.present? %>
              <p style="margin: 5px 0;"><strong>üìû</strong> <%= @sede.telefono %></p>
            <% end %>
          </div>
        `
      });

      marker.addListener("click", () => {
        infoWindow.open(map, marker);
      });

      // Abrir info window autom√°ticamente
      infoWindow.open(map, marker);
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_map[:key] %>&callback=initMap" async defer></script>
<% end %>
